// Prisma Schema - FinanzasCL
// PostgreSQL (Supabase) - Compatible con Auth.js/NextAuth y datos por usuario

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// =============================================================================
// Auth.js / NextAuth - Modelos estándar
// =============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Opcional: solo usuarios con Credentials; usuarios Google no tienen
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  categorias     Categoria[]
  cuentas        Cuenta[]
  tarjetasCredito TarjetaCredito[]
  metasAhorro    MetaAhorro[]
  presupuestos   Presupuesto[]
  movimientos    Movimiento[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =============================================================================
// Dominio Finanzas - Todas las tablas relacionadas a User (multi-tenant)
// =============================================================================

model Categoria {
  id        String   @id @default(cuid())
  nombre    String
  tipo      String   // "Gasto" | "Ingreso" | "Ambos"
  color     String
  icono     String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  movimientos   Movimiento[]
  presupuestos  Presupuesto[]

  @@index([userId])
}

model Cuenta {
  id                   String   @id @default(cuid())
  nombre               String
  banco                String
  saldoInicialMes      Float    @default(0)
  saldoFinalMesDeclarado Float?
  saldoCalculado       Float    @default(0)
  activo               Boolean  @default(true)
  userId               String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  movimientosOrigen  Movimiento[] @relation("CuentaOrigen")
  movimientosDestino Movimiento[] @relation("CuentaDestino")
  metasAhorro        MetaAhorro[]

  @@index([userId])
}

model TarjetaCredito {
  id                 String   @id @default(cuid())
  nombre             String
  banco              String
  cupoTotal          Float
  cupoDisponible     Float
  fechaFacturacion   Int      // día del mes (1-31)
  fechaPago          Int      // día del mes (1-31)
  tasaInteresMensual  Float
  deudaActual        Float    @default(0)
  deudaFacturada     Float    @default(0)
  deudaNoFacturada   Float    @default(0)
  userId             String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  movimientos  Movimiento[]

  @@index([userId])
}

model MetaAhorro {
  id                    String   @id @default(cuid())
  nombre                 String
  objetivoCLP            Float
  fechaObjetivo          DateTime @db.Date
  aporteMensualSugerido  Float
  acumuladoCLP           Float    @default(0)
  estado                 String   // "Activa" | "Completada"
  userId                 String
  cuentaDestinoId        String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cuentaDestino  Cuenta   @relation(fields: [cuentaDestinoId], references: [id], onDelete: Restrict)

  @@index([userId])
}

model Presupuesto {
  id                    String   @id @default(cuid())
  categoriaId            String
  mes                    String   // YYYY-MM
  montoPresupuestadoCLP  Float
  userId                 String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoria Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  @@unique([userId, categoriaId, mes])
  @@index([userId])
}

model Movimiento {
  id                   String   @id @default(cuid())
  fecha                DateTime @db.Date
  descripcion          String
  tipoMovimiento       String   // "Ingreso" | "Gasto" | "Transferencia"
  categoriaId          String
  subcategoria         String?
  tipoGasto            String?  // "Fijo" | "Variable" | "Ocasional"
  metodoPago           String   // "Débito" | "Crédito" | "Efectivo" | "Transferencia"
  montoCLP             Float
  cuotas               Int?
  etiquetas            String[] // array de strings en PostgreSQL
  notas                String?  @db.Text
  estadoConciliacion   String   // "Pendiente" | "Conciliado"
  mesConciliacion      String   // YYYY-MM
  userId               String
  cuentaOrigenId       String?
  cuentaDestinoId      String?
  tarjetaCreditoId     String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoria      Categoria     @relation(fields: [categoriaId], references: [id], onDelete: Restrict)
  cuentaOrigen   Cuenta?       @relation("CuentaOrigen", fields: [cuentaOrigenId], references: [id], onDelete: SetNull)
  cuentaDestino  Cuenta?       @relation("CuentaDestino", fields: [cuentaDestinoId], references: [id], onDelete: SetNull)
  tarjetaCredito TarjetaCredito? @relation(fields: [tarjetaCreditoId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, mesConciliacion])
  @@index([fecha])
}
